<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="site.danielio.interactivestory.ui.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/main_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/titleImageView"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:contentDescription="Signals From Mars"
        />

    <Button
        android:text="@string/MAbuttonText"
        android:background="@android:color/white"
        android:textColor="#FF3A8AEC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/startButton"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_above="@+id/startButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/nameEditText"
        android:maxLength="30"
        android:hint="@string/editTextName"
        android:gravity="center"
        />
</RelativeLayout>
